@model MvcBookstore.Models.BookCategoryViewModel

@{
    ViewData["Title"] = "Index";
}

<!-- This is the view responsible for the page when users wish to view the collection of books within the bookstore app.
    It is also responsible for the search function of books.
    This is the default view for the book controller.
-->


<h1>Our Collection</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Books" asp-action="Index" method="get">
    <p>
        
        <select asp-for="BookCategory" asp-items="Model.Categories">
            <option value="">All</option>
        </select>
        Title: <input type="text" asp-for="SearchString"/>
        <input type="submit" value="Filter"/>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Books![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books![0].BookId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books![0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books![0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books![0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books![0].ReserveId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Books!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReserveId)
                </td>
            <td>
                <a asp-action="Reserve" asp-route-id="@item.Id">Reserve</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
